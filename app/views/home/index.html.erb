<h1>Tus Bandas</h1>
<br/>
<!-- Añadir banda para seguir estadisticas -->
<div class="row">
	<div class="col-md-4">
		<%= form_tag("/home/crear",:class => "form") do %>
			<div class="form-group">
				<%= label_tag("Banda") %>
				<%= text_field_tag("nombre","",:class => "form-control") %>
			</div>
	<%= submit_tag("Añadir banda",:class => "btn btn-primary") %>
		<% end %>
	</div>
</div>
<br/>
<% if @quiso_decir != nil && @quiso_decir != 1%>
	<div class="quiso_decir subrayado negrilla">
		<%= link_to("Quizás quiso decir: #{@quiso_decir.split.map(&:capitalize).join(' ')}",{:action => "crear",:nombre => @quiso_decir.split.map(&:capitalize).join(' ')},method: :post) %>
		<br/><br/>
	</div>
<% elsif @quiso_decir == 1%>
	<p class="no-existe subrayado negrilla">El artista que usted busca no existe ó está mal escrito.</p>
<% end %>
<!-- Estadisticas de las bandas -->
<div id="content_tabla">
	<%= render :partial => "tabla" %> <!--aca hago el render de la vista parcial del menu -->
</div>
